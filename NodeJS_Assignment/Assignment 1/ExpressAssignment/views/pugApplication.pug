doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Hero Form
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    .container.mt-5
      h1.text-center PUG Application
      h2.hero-title.text-center Hero Information
      form(action="#" method="POST")
        .form-group
          label(for="title") Title:
          input.form-control(type="text", name="title", required)
        .form-group
          label(for="firstName") First Name:
          input.form-control(type="text", name="firstName", required)
        .form-group
          label(for="lastName") Last Name:
          input.form-control(type="text", name="lastName", required)
        .form-group
          label(for="power") Power:
          input.form-control(type="number", name="power", required)
        .form-group
          label(for="city") City:
          input.form-control(type="text", name="city", required)
        button.btn.btn-primary(type="submit") Add Hero
      hr
      table.table
        thead
          tr
            th Title
            th First Name
            th Last Name
            th Power
            th City
        tbody
          each hero in pugData.avengers
            tr
              td= hero.title
              td= hero.firstName
              td= hero.lastName
              td= hero.power
              td= hero.city
